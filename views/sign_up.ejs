<%- include("header.ejs") %>
  <main class="main-content">
    <div class="form-wrapper">
      <p class="start-text">START FOR FREE</p>
      <h1>Create new account<span class="accent-dot">.</span></h1>
      <p class="member-text">Already A Member? <a href="/signin">Sign In</a></p>

      <form method="POST" action="/signup">
        <div class="name-row">
          <input type="text" name="firstName" placeholder="First name" required />
          <input type="text" name="lastName" placeholder="Last name" required />
        </div>
        <input type="email" name="email" placeholder="Email" required />
        <input type="password" name="password" placeholder="Password" required />
        <input type="text" name="referralCode" placeholder="Referral Code" required />
        <input type="number" name="donationAmount" placeholder="Donation Amount" min="0" step="any" class="number-input"/>
        <div class="button-row">
          <button type="submit" class="primary-btn">Create account</button>
        </div>
      </form>
    </div>
  </main>

<%- include("footer.ejs") %>
